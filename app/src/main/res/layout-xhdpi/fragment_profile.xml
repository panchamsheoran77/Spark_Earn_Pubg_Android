<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/llayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_pic"
            android:layout_marginTop="17dp"
            app:cardBackgroundColor="#fcd116"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/pubg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/beyno"
                    android:textColor="#000"
                    android:text="PUBG USER NAME : "
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/pubg_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exan_regular"
                    android:text="RonyRocky77"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/llayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llayout1"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#fcd116"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/pub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PUBG USER ID : "
                    android:fontFamily="@font/beyno"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/pubg_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exan_regular"
                    android:text="11111"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textColor="#fcd116"
                android:layout_marginRight="5dp"
                android:textSize="25sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp" />
            <TextView
                android:id="@+id/user_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#fcd116"
                android:textSize="20sp"

                android:fontFamily="@font/exan_regular"
                android:onClick="toWallet"
                android:textStyle="bold"
                />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fcd116"
            app:cardCornerRadius="20dp"
            android:id="@+id/linear"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/llayout2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/profile_card_back"
                android:layout_margin="5dp"
                >
                <LinearLayout
                    android:id="@+id/card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="#fcd116"
                            android:text="MATCH PLAYED"
                            android:textStyle="bold"
                            android:fontFamily="@font/beyno"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/match_played_number"
                            android:text="1"
                            android:textSize="22sp"
                            android:textColor="#1d8ece"
                            android:fontFamily="@font/exan_regular"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <FrameLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="#fcd116"
                            android:text="MATCH WON"
                            android:fontFamily="@font/beyno"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/match_win"
                            android:text="1"
                            android:textSize="22sp"
                            android:fontFamily="@font/exan_regular"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textColor="#1d8ece"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#fcd116"
                        app:cardCornerRadius="15dp"
                        android:layout_height="125dp"
                        android:id="@+id/edit"
                        android:onClick="toedit"
                        android:layout_margin="5dp"

                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:background="@drawable/profile_card_back"
                            >
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="#fcd116"
                                android:fontFamily="@font/beyno"
                                android:text="EDIT PROFILE"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:id="@+id/wallet"
                        app:cardBackgroundColor="#fcd116"
                        app:cardCornerRadius="15dp"
                        android:onClick="toWallet"
                        android:layout_margin="5dp"

                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_card_back"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="#fcd116"
                                android:fontFamily="@font/beyno"
                                android:text="USER  WALLET"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:id="@+id/top_players"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#fcd116"
                        app:cardCornerRadius="15dp"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_card_back"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textColor="#fcd116"
                                android:textStyle="bold"
                                android:text="Contact us"
                                android:fontFamily="@font/beyno"
                                android:onClick="mailus"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:id="@+id/share_app"
                        android:onClick="shareIntent"
                        app:cardBackgroundColor="#fcd116"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="5dp"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_card_back"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:text="SHARE APP"
                                android:textColor="#fcd116"
                                android:fontFamily="@font/beyno"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#fcd116"
                        app:cardCornerRadius="15dp"
                        android:layout_height="125dp"
                        android:id="@+id/about_us"
                        android:onClick="toInsta"
                        android:layout_margin="5dp"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_card_back"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/beyno"
                                android:text="ABOUT US"
                                android:textColor="#fcd116"
                                android:layout_gravity="center"

                                />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:id="@+id/logout"
                        app:cardBackgroundColor="#fcd116"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="5dp"
                        android:onClick="login_activity"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@drawable/profile_card_back"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="#fcd116"
                                android:fontFamily="@font/beyno"
                                android:text="LOG OUT"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="300dp"
                        app:cardBackgroundColor="#fcd116"
                        app:cardCornerRadius="15dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/youtube"
                        android:onClick="youtube"
                        android:layout_marginLeft="145dp"
                        android:layout_marginStart="145dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_card_back"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="#fcd116"
                                android:fontFamily="@font/beyno"
                                android:text="YOU TUBE"
                                android:layout_margin="2dp"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <com.google.android.gms.ads.AdView
                    android:id="@+id/google_ad_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-6959993616164778/1464492585"
                    />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


    <include layout="@layout/layout_bottom_navigation_view"/>
</RelativeLayout>