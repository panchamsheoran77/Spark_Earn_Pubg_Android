<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/ard_back">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fcd116"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/result_imageView"
                        android:layout_width="61dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/maprev"
                        android:layout_marginEnd="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="3dp"
                        >

                        <TextView
                            android:id="@+id/result_match_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:text="Match 01"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/exan_regular"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/result_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date : 27-03-2019  Time : 10:46 AM"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp" />
                        <TextView
                            android:id="@+id/result_map_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Erangel"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>