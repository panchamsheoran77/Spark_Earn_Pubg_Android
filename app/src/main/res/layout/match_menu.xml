<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:id="@+id/ll"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ard_back"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:id="@+id/card_play"
            app:cardBackgroundColor="#fcd116"
            app:cardCornerRadius="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/play_imageView"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/pubg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:id="@+id/play_match_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Match 01"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="@font/exan_regular"
                            />

                        <TextView
                            android:id="@+id/play_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="15dp"
                            android:text="Date : 27-03-2019  Time : 10:46 AM"
                            android:textSize="15sp"
                            android:layout_marginStart="15dp" />
                        <TextView
                            android:id="@+id/roomid_passs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fd6a02"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textSize="15sp"
                            android:layout_marginStart="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    >
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_marginTop="10dp"
                     >
                    <TextView
                        android:id="@+id/ent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="#000000"
                        android:text="ENTRY FEE"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/beyno"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="PER KILL"
                        android:textSize="15sp"
                        android:layout_marginLeft="35dp"
                        android:fontFamily="@font/beyno"
                        android:layout_marginStart="35dp" />


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="WIN PRICE"
                        android:layout_marginLeft="50dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/beyno"
                        />
                 </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/play_entry_fee_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textColor="#000000"
                            android:text="35"
                            android:textSize="15sp"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/exan_regular"
                            android:layout_marginStart="24dp" />

                        <TextView
                            android:id="@+id/play_per_kill_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="20"
                            android:textSize="15sp"
                            android:layout_marginLeft="90dp"
                            android:fontFamily="@font/exan_regular"
                            android:layout_marginStart="90dp" />


                        <TextView
                            android:id="@+id/play_win_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="200"
                            android:layout_marginLeft="105dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/exan_regular"
                            android:layout_marginStart="105dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textColor="#000000"
                            android:text="TYPE"
                            android:textSize="15sp"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/beyno"
                            android:layout_marginStart="20dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="VERSION"
                            android:textSize="15sp"
                            android:layout_marginLeft="65dp"
                            android:fontFamily="@font/beyno"
                            android:layout_marginStart="65dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="MAP"
                            android:layout_marginLeft="80dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/beyno"
                            android:layout_marginStart="80dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/play_type_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textColor="#000000"
                            android:text="SOLO"
                            android:textSize="15sp"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/exan_regular"
                            android:layout_marginStart="20dp" />

                        <TextView
                            android:id="@+id/play_version_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="TPP"
                            android:textSize="15sp"
                            android:layout_marginLeft="65dp"
                            android:fontFamily="@font/exan_regular"
                            android:layout_marginStart="65dp" />


                        <TextView
                            android:id="@+id/play_map_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="ERANGEL"
                            android:layout_marginLeft="80dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/exan_regular"
                            android:layout_marginStart="80dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Slots remaining : "
                            android:fontFamily="@font/exan_regular"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/exan_regular"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:text="50"
                            android:id="@+id/slot_remaining"
                            android:layout_marginStart="30dp" />

                    </LinearLayout>
                 </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/popupwindo">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tnc_layout"
                        >

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:text="Term &amp; Conditions"
                                        android:layout_margin="15dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/exan_regular"
                                        android:textColor="@color/black"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* YOU WILL GET ROOM CREDENTIALS 5 MIN BEFORE THE MATCH"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:layout_marginTop="5dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/exan_regular"
                                        android:textColor="@color/black"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* EMULATORS ARE BANNED"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginStart="20dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/exan_regular"
                                        android:textColor="@color/black"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* LISTED ENTRY FEE IS PER INDIVIDUAL I.E. FOR SUAD AND DUO"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:layout_marginTop="5dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/exan_regular"
                                        android:textColor="@color/black"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* DO NOT CALL UNREGISTERED USERS OTHERWISE YOUR ACCOUNT WILL BE BANNED"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/exan_regular"
                                        android:textColor="@color/black"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* GRIEFING AND TEAMING IS AGAINST THE GAME RULES"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="5dp"
                                        android:textStyle="bold"
                                        android:layout_marginStart="20dp"
                                        android:fontFamily="@font/exan_regular"
                                        android:textColor="@color/black"
                                        />
                                </LinearLayout>
                            </ScrollView>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/match_detail_join"
                            android:text="Join"
                            android:fontFamily="@font/beyno"
                            android:textColor="#000"
                            android:background="@drawable/join_button_back"
                            android:textSize="20sp"
                            android:layout_margin="10dp"
                            android:textStyle="bold"
                            />
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </LinearLayout>


                </ScrollView>
            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>