<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#000">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="200dp"
    android:background="@color/black"
    >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_new"
        />
    <TextView
        android:id="@+id/wallet_inr_image"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:text="â‚¹"
        android:textColor="#fcd116"
        android:gravity="center"
        android:textSize="60dp"
        android:layout_gravity="center"

        />
    <TextView
        android:id="@+id/wallet_add_section_money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fcd116"
        android:textSize="55sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="5"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            />
    <android.support.design.widget.TextInputLayout
        style="@style/Widget.TextInputLayout_wallet"
        android:id="@+id/email_input"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp">
        <android.support.design.widget.TextInputEditText
            style="@style/Widget.TextEdit_wallet"
            android:id="@+id/add_money_amount"
            android:hint="Enter Amount"
            android:textColor="#fcd116"
            app:backgroundTint="#fcd116"
            android:inputType="textPhonetic" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
        <Button
            android:id="@+id/add_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/addmonetback"
            android:padding="10dp"
            android:text="ADD MONEY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/transSN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:layout_marginEnd="70dp"
                android:textColor="#fcd116"
                android:textSize="15sp"
                android:text="S.No"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/transId"
                android:text="Order Id"
                android:textColor="#fcd116"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp" />
            <TextView
                android:id="@+id/transRupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fcd116"
                android:textSize="15sp"
                android:text="Amount"
                android:layout_marginLeft="70dp"
                android:layout_marginStart="70dp"
                />
        </LinearLayout>
  <android.support.v7.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:id="@+id/transContainer"
      />
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/google_ad_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6959993616164778/1464492585"
        />
</LinearLayout>